<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/header" />

        <TextView
            android:id="@+id/title_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="title "
            android:textColor="@color/white_70"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descreption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:text='Auf stabile Dividendenwerte und ETFs zu setzen mag vernünftig sein und stabile Rückflüsse versprechen.\r\nAber manchmal wollen wir auch einen Volltreffer in unserem Depot sehen, der sich verdoppelt, verdreifacht oder gar verzehnfacht. Dafür eignen sich am beste… [+8177 chars]"'
            android:textColor="#333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="206dp"
            app:srcCompat="@drawable/time_24dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:text="2019-01-30T10:47:00Z"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/view_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descreption"
            android:layout_marginStart="10dp"
            android:text="View full article"
            android:textColor="@color/cyan" />
    </RelativeLayout>

</android.support.v7.widget.CardView>