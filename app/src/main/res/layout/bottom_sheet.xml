<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:text="COUNTRY"
                android:alpha="0.30"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
               />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cont"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:text="LANGAUGE"
                android:textColor="@android:color/black"
                android:textSize="18sp"

                android:alpha="0.30"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/langg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/langg"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/padding_10"
                android:text="CATEGORY"
                android:alpha="0.30"
                style="@style/TextAppearance.AppCompat.Headline"

                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/catg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="133dp"
                android:layout_marginTop="12dp"
                android:text="APPLY FILTER"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:alpha="0.60"
                style="@style/TextAppearance.AppCompat.Headline"
                />


            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/catg"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/padding_10"
                android:background="@drawable/bttn_bg"
                android:backgroundTint="@color/grey"
                android:text="apply"
                android:textIsSelectable="false"
                android:textStyle="bold" />
        </RelativeLayout>

</android.support.v4.widget.NestedScrollView>